<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 90%;
    box-shadow: 10px 10px 5px grey;
}
td, th {
    border: none;
    text-align: left;
    padding: 15px;
}
th {background-color: #FFCA28}
tr:nth-child(even) {
    background-color: #FFF8E1;
}
</style>

<table class="table table-boldered">

<caption>我的额外加分</caption>
    <thead>
        <tr>
            <td> Gems</td>
            <td>薪资下限</td>
            <td>薪资上限</td>
            <td>时间</td>
        </tr>

    </thead>
    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td>
                <%= link_to(job.title, job_path(job)) %>
            </td>
            <td>
                <%= job.wage_lower_bound %>
            </td>
            <td>
                <%= job.wage_upper_bound %>
            </td>
            <td>
                <%= job.created_at %>
            </td>
        </tr>
        <% end %>
    </tbody>

</table>
